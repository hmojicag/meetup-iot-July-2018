@page
@model IndexModel
@{
    ViewData["Title"] = "IoT";
}

<div class="row">
    <div class="col-lg-12 text-center">
        <img src="images/dous.png" class="img-fluid" alt="Responsive image">
    </div>
</div>


<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 text-center">
        <form method="post">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" aria-describedby="emailHelp" placeholder="Your name">
                <small class="form-text text-muted">16 characters max. No Special Characters</small>
            </div>
            <div class="form-group">
                <label for="Message">A messgage</label>
                <input type="text" name="Message" class="form-control" id="Message" placeholder="A messgage">
                <small class="form-text text-muted">16 characters max. No Special Characters</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button></br>
                <small class="form-text text-muted">The message will be automatically deleted after 30sec or when reaching 10.</small>
        </form>
    </div>
    <div class="col-lg-3"></div>
</div>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div id="divMessages" class="alert alert-success" role="alert">
            
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>